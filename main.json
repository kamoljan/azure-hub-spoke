{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hubName": {
      "type": "string"
    },
    "hubAddressPrefix": {
      "type": "string"
    },
    "hubManagmentSubnet": {
      "type": "string"
    },
    "spoke1Name": {
      "type": "string"
    },
    "spoke1AddressPrefix": {
      "type": "string"
    },
    "spoke2Name": {
      "type": "string"
    },
    "spoke2AddressPrefix": {
      "type": "string"
    }
  },
  "variables": {
    "diagStorageAccountName": "[substring(concat(replace(parameters('hubName'),'-',''), 'dg', uniqueString(resourceGroup().id)),0,23)]",
    "hub": {
      "name": "[parameters('hubName')]",
      "addressPrefix": "[parameters('hubAddressPrefix')]",
      "subnets": {
        "managementSubnet": {
          "name": "managementSN",
          "addressPrefix": "[parameters('hubManagmentSubnet')]",
          "nsg": "managementNSG"
        }
      }
    },
    "spoke1": {
      "name": "[parameters('spoke1Name')]",
      "addressPrefix": "[parameters('spoke1AddressPrefix')]"
    },
    "spoke2": {
      "name": "[parameters('spoke2Name')]",
      "addressPrefix": "[parameters('spoke2AddressPrefix')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('diagStorageAccountName')]",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('hub').subnets.managementSubnet.nsg]",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "Allow-Inbound-SSH-Internet",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "Deny-Internet-All",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Deny",
              "priority": 200,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('hub').name]",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('hub').subnets.managementSubnet.nsg)]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('hub').addressPrefix]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('hub').subnets.managementSubnet.name]",
            "properties": {
              "addressPrefix": "[variables('hub').subnets.managementSubnet.addressPrefix]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('hub').subnets.managementSubnet.nsg)]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('spoke1').name]",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('spoke1').addressPrefix]"
          ]
        },
        "subnets": []
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('spoke2').name]",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('spoke2').addressPrefix]"
          ]
        },
        "subnets": []
      }
    }
  ],
  "outputs": {}
}